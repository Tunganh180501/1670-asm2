@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FPT Job Match - Trang chủ</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container">
            <div class="logo">
                <a href="index.html"><img src="images/logo.png" alt="FPT Job Match Logo"></a>
            </div>
        </div>
    </header>
    
    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1>Tìm kiếm công việc phù hợp nhất với bạn</h1>
            <p>Khám phá hàng ngàn cơ hội việc làm hấp dẫn tại FPT Job Match</p>
            <form class="search-form">
                <input type="text" placeholder="Từ khóa, vị trí, kỹ năng...">
                <button type="submit">Tìm kiếm</button>
            </form>
        </div>
    </section>
    
    <!-- Job Listings -->
    <section id="jobs" class="job-listings">
        <div class="container">
            <h2>Việc làm nổi bật</h2>
            <div class="job-card">
                <h3>Chuyên viên lập trình</h3>
                <p>Công ty FPT Software</p>
                <p><i class="fas fa-map-marker-alt"></i> Hà Nội, Việt Nam</p>
                <a href="#" class="btn-apply">Ứng tuyển ngay</a>
            </div>
            <div class="job-card">
                <h3>Kỹ sư kiểm thử phần mềm</h3>
                <p>Công ty FPT Software</p>
                <p><i class="fas fa-map-marker-alt"></i> Đà Nẵng, Việt Nam</p>
                <a href="#" class="btn-apply">Ứng tuyển ngay</a>
            </div>
            <div class="job-card">
                <h3>Chuyên viên AI/ML</h3>
                <p>Công ty FPT.AI</p>
                <p><i class="fas fa-map-marker-alt"></i> TP. Hồ Chí Minh, Việt Nam</p>
                <a href="#" class="btn-apply">Ứng tuyển ngay</a>
            </div>
        </div>
    </section>
    
    <!-- About Section -->
    <section id="about" class="about">
        <div class="container">
            <h2>Về chúng tôi</h2>
            <p>FPT Job Match là nền tảng kết nối ứng viên và nhà tuyển dụng, mang đến những cơ hội việc làm hấp dẫn và phù hợp nhất cho người tìm việc.</p>
        </div>
    </section>
    
    <!-- Contact Section -->
    <section id="contact" class="contact">
        <div class="container">
            <h2>Liên hệ với chúng tôi</h2>
            <form>
                <input type="text" placeholder="Tên của bạn" required>
                <input type="email" placeholder="Email của bạn" required>
                <textarea placeholder="Lời nhắn của bạn" required></textarea>
                <button type="submit">Gửi</button>
            </form>
        </div>
    </section>
    
    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2024 FPT Job Match. Tất cả các quyền được bảo lưu.</p>
            <div class="social-links">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
    </footer>
    
    <script src="scripts.js"></script>
</body>
</html>

<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            color: #333;
            background-color: #f4f4f9;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
        }

        header {
            background-color: #0077b6;
            padding: 1rem 0;
            color: #fff;
        }

        header .logo img {
            width: 150px;
        }

        nav ul {
            display: flex;
            justify-content: flex-end;
            list-style: none;
        }

        nav ul li {
            margin-left: 20px;
        }
nav ul li a {
            color: #fff;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s;
        }

        nav ul li a:hover {
            color: #ffc107;
        }

        .btn-login {
            background-color: #ffc107;
            padding: 0.5rem 1rem;
            border-radius: 5px;
        }

        .hero {
            background: url('images/hero-bg.jpg') no-repeat center center/cover;
            height: 70vh;
            color: #fff;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .hero p {
            font-size: 1.25rem;
            margin-bottom: 2rem;
        }

        .search-form input[type="text"] {
            padding: 0.7rem;
            width: 60%;
            border: none;
            border-radius: 5px 0 0 5px;
        }

        .search-form button {
            padding: 0.7rem 1rem;
            background-color: #0077b6;
            color: #fff;border: none;
            border-radius: 0 5px 5px 0;
            cursor: pointer;
        }

        .job-listings h2 {
            text-align: center;
            margin-bottom: 2rem;
        }

        .job-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: center;
            transition: transform 0.3s;
        }

        .job-card:hover {
            transform: scale(1.05);
        }

        .job-card h3 {
            margin-bottom: 1rem;
        }

        .job-card p {
            margin-bottom: 0.5rem;
        }.btn-apply {
            background-color: #0077b6;
            color: #fff;
            padding: 0.7rem 1rem;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-apply:hover {
            background-color: #005f8b;
        }

        .about, .contact {
            padding: 4rem 0;
            background-color: #f4f4f9;
            text-align: center;
        }

        .about h2, .contact h2 {
            margin-bottom: 2rem;
        }

        .contact form input, .contact form textarea {
            width: 100%;
            padding: 1rem;
            margin-bottom: 1rem;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .contact form button {
            background-color: #0077b6;
            color: #fff;
            border: none;padding: 1rem 2rem;
            border-radius: 5px;
            cursor: pointer;
        }

        footer {
            background-color: #0077b6;
            color: #fff;
            text-align: center;
            padding: 1rem 0;
        }

        footer p {
            margin-bottom: 1rem;
        }

        .social-links a {
            color: #fff;
            margin: 0 10px;
            font-size: 1.5rem;
        }
    </style>